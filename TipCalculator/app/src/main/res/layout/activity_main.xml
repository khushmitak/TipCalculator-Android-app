<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/BillAmountID"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_dynamic_tertiary99"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:background="#8CDCC0"
            android:gravity="center"
            android:text="Tip Calculator"
            android:textAlignment="center"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/baseInputText"
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="15dp"
                android:background="@color/material_dynamic_tertiary99"
                android:ems="10"
                android:gravity="center"
                android:text="Base"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/billAmountID"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="80dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Bill Amount"
                android:inputType="numberDecimal"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tipPercentageLabel"
                android:layout_width="59dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:background="@color/material_dynamic_tertiary99"
                android:ems="10"
                android:gravity="center"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="22sp"
                tools:text="24%" />

            <SeekBar
                android:id="@+id/seekBarForTip"
                android:layout_width="198dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="80dp"
                android:layout_weight="1"
                android:background="@color/material_dynamic_tertiary99"
                android:max="30"
                android:outlineAmbientShadowColor="@color/design_default_color_secondary"
                android:outlineSpotShadowColor="@color/design_default_color_secondary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tipText"
                android:layout_width="23dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/material_dynamic_tertiary99"
                android:gravity="center"
                android:text="Tip"
                android:layout_marginStart="15dp"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tipAmount"
                android:layout_width="159dp"
                android:layout_height="38dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="80dp"
                android:layout_weight="1"
                android:textSize="20sp"
                tools:text="24.00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/totalText"
                android:layout_width="9dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Total"
                android:layout_marginStart="15dp"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/displayBillAmount"
                android:layout_width="144dp"
                android:layout_height="38dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="80dp"
                android:layout_weight="1"
                android:textSize="20sp"
                tools:text="100.00" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>